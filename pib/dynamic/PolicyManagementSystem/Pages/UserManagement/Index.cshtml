@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PolicyManagementSystem.Controllers.Models.UserManagementViewModel
@{

}
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">User Management</h2>1
                <p class="pageheader-text"></p>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">User Management</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Users</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->

    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">Users</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <a class="btn btn-primary btn-block" style="color:white" asp-controller="UserManagement" asp-action="Create">Add User</a>
                    <br />
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Title</th>
                                <th>Account Type</th>
                                <th>Department</th>
                                <th>Job Title</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.tblUseraccounts)
                            {
                                <tr>
                                    <td>@user.FldUsername</td>
                                    <td>@user.FldUserTitle</td>
                                    <td>@user.FldUserAccounttype</td>
                                    <td>@user.FldUserDepartment</td>
                                    <td>@user.FldUserJobtitle</td>
                                    <td>
                                        <a class="btn btn-primary btn-block" style="color:white" asp-route-id="@user.FldAccountId" asp-controller="UserManagement" asp-action="Edit">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Title</th>
                                <th>Account Type</th>
                                <th>Department</th>
                                <th>Job Title</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>