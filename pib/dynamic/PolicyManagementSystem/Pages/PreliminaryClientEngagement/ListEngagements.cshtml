@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PolicyManagementSystem.Controllers.Models.ClientEngagementViewModel
@{

}
<!-- ============================================================== -->
<!-- pageheader -->
<!-- ============================================================== -->
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">Preliminary Client Engagement</h2>
            <p class="pageheader-text"></p>
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                        <!--<li class="breadcrumb-item">-->@*<a href="#" class="breadcrumb-link">Preliminary Client Engagement</a>*@<!--</li>-->
                        <li class="breadcrumb-item active" aria-current="page">Preliminary Client Engagement</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->

    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">List Engagements</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <br />
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Last Name</th>
                                <th>Mobile Number</th>
                                <th>Email</th>
                                <th>Province</th>
                                <th>Comment</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.CallMeBackList)
                            {
                            <tr>
                                <td>@user.FullName</td>
                                <td>@user.LastName</td>
                                <td>@user.MobileNumber</td>
                                <td>@user.Email</td>
                                <td>@user.Province</td>
                                <td>@user.Comment</td>
                                <td>
                                    <a class="btn btn-primary btn-block" style="color:white" asp-route-id="@user.Id" asp-controller="PreliminaryClientEngagement" asp-action="ViewClient">View</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Full Name</th>
                                <th>Last Name</th>
                                <th>Mobile Number</th>
                                <th>Email</th>
                                <th>Province</th>
                                <th>Comment</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>